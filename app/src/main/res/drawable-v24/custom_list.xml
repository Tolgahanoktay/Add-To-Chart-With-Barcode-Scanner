<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="120dp">

    <ImageView
        android:id="@+id/productView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"></ImageView>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sana Paket Margarin Klasik ..."
            android:textAlignment="viewStart"
            android:textSize="12dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/productUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Adet"
            android:textSize="12dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/productUPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="854,99 T"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/prd_priceTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8549,99 T"
            android:textSize="12dp"
            android:textAlignment="viewEnd"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:gravity="center|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_buttonthree"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>






</LinearLayout>